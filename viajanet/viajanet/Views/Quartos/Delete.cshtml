@model viajanet.Models.Quarto

@{
    ViewBag.Title = "Delete";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h3 class="text-center">Você realmente deseja apagar este quarto?</h3>
                <p class="form-control-feedback"></p>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        Hotel
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Hotel.Nome)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Diaria)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Diaria)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Capacidade)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Capacidade)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="panel-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    @Html.ActionLink("Voltar", "viewQuartosHotel", "Quartos",new {id = Model.Fk_Hotel } ,new { @class = "btn btn-warning pull-left"})
                    <input type="submit" value="Apagar" class="btn btn-danger pull-right" /> 
                    
                </div>
            }
        </div>
    </div>
</div>
