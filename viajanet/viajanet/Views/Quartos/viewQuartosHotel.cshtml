@model IEnumerable<viajanet.Models.Quarto>

@{
    ViewBag.Title = "viewQuartosHotel";
}



<p>
    <a class="btn btn-success" href="@Url.Action("CreateQuartoHotel",new {id = ViewBag.idHotel })"><span><i class="glyphicon glyphicon-plus"></i></span> Adicionar um quarto</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Hoteis</h2>
                <div class="panel-ctrls">
                </div>
            </div>
            <div class="panel-body panel-no-padding table-responsive">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Hotel.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Diaria)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Capacidade)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Suite)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hotel.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Diaria)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Capacidade)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Suite)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit",new { id = item.Id })" class="btn btn-warning" title="Editar" data-toggle="tooltip"><span><i class="fa fa-pencil"></i></span></a>

                                    <a href="@Url.Action("Details",new { id = item.Id })" class="btn btn-info" title="Detalhes" data-toggle="tooltip"><span><i class="fa fa-list"></i></span></a>

                                    <a href="@Url.Action("Delete",new { id = item.Id })" class="btn btn-danger" title="Apagar" data-toggle="tooltip"><span><i class=" fa fa-trash"></i></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

                <div class="panel-footer">
                    
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-warning pull-left" href="@Url.Action("Index","Hotels")"><span><i class="glyphicon glyphicon-arrow-left"></i></span> Voltar</a>
    </div>
</div>





