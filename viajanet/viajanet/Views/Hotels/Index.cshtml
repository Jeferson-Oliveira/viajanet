@model IEnumerable<viajanet.Models.Hotel>

@{
    ViewBag.Title = "Visualização de Hoteis";
}

<h2>Visualização</h2>

<p>
    <a href="@Url.Action("Create","Hotels")" class="btn btn-success" title="Novo Hotel" data-toggle="tooltip"><span><i class="glyphicon glyphicon-plus"></i></span> Novo</a> 
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Hoteis</h2>
                <div class="panel-ctrls">
                </div>
            </div>
            <div class="panel-body panel-no-padding">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telefone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Longradouro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Estado.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cidade.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Bairro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cep)
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Longradouro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cidade.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Bairro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cep)
                                </td>
                                <td style="white-space: nowrap;" class="center-block">
                                    <a href="@Url.Action("viewQuartosHotel","Quartos",new { id = item.Id })" class="btn btn-success" title="Visualizar quartos" data-toggle="tooltip"><span><i class="fa fa-bed"></i></span></a>

                                    <a href="@Url.Action("Edit",new { id = item.Id })" class="btn btn-warning" title="Editar" data-toggle="tooltip"><span><i class="fa fa-pencil"></i></span></a>

                                    <a href="@Url.Action("Details",new { id = item.Id })" class="btn btn-info" title="Detalhes do hotel" data-toggle="tooltip"><span><i class="fa fa-list"></i></span></a>

                                    <a href="@Url.Action("Delete",new { id = item.Id })" class="btn btn-danger" title="Apagar Hotel" data-toggle="tooltip"><span><i class=" fa fa-trash"></i></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>






