@model viajanet.Models.Viajem

@{
    ViewBag.Title = "Details";
}

<h2>Detalhes</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Viajem</h4>
        <hr />
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        De
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cidade1.Nome)
                    </dd>
                    <dt>
                        Companhia aérea
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Companhia.Nome)
                    </dd>
                    <dt>
                        Data de Ida
                    </dt>

                    <dd>
                        @Model.Data_Ida.ToShortDateString()
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        Para
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cidade.Nome)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Valor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Valor)
                    </dd>
                    <dt>
                        Data de volta
                    </dt>

                    <dd>
                        @Model.Data_Volta.ToShortDateString()
                    </dd>
                </dl>
            </div>
        </div>
        <div class="panel-footer">
            @Html.ActionLink("Editar dados", "Edit", new { id = Model.Id },new {@class = "btn btn-info pull-right" }) 
            @Html.ActionLink("Voltar", "Index","Viajens", new {@class = "btn btn-warning pull-left" })
        </div>
    </div>
</div>
