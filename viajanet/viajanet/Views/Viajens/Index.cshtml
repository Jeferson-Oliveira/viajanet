@model IEnumerable<viajanet.Models.Viajem>

@{
    ViewBag.Title = "Index";
}
@if (TempData["Mensagem"] != null)
{
    if (TempData["tipo"].ToString() == "success")
    {

        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-success">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Sucesso</strong> @TempData["Mensagem"];
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>Erro</strong> @TempData["Mensagem"] , @TempData["Erro"];
                </div>
            </div>
        </div>
    }
}

<h2>Index</h2>

<p>
    
    <a class="btn btn-success" href="@Url.Action("Create","Viajens")"><span><i class="glyphicon glyphicon-plus"></i> Novo</span></a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Hoteis</h2>
                <div class="panel-ctrls">
                </div>
            </div>
            <div class="panel-body panel-no-padding ">
                <table id="example" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Estado de saída
                            </th>
                            <th>
                                Cidade saida
                            </th>
                            <th>
                                Estado de destino
                            </th>
                            <th>
                                Cidade destino
                            </th>
                            <th>
                                Companhia aérea
                            </th>
                            <th>
                                Data de ida
                            </th>
                            <th>
                                Data de Volta
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Valor)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cidade1.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado1.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cidade.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Companhia.Nome)
                                </td>
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Data_Ida)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Data_Volta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Valor)
                                </td>
                                <td style="white-space: nowrap;">
                                    <a href="@Url.Action("Edit",new { id = item.Id })" class="btn btn-warning" title="Editar" data-toggle="tooltip"><span><i class="fa fa-pencil"></i></span></a>

                                    <a href="@Url.Action("Details",new { id = item.Id })" class="btn btn-info" title="Detalhes da viagem" data-toggle="tooltip"><span><i class="fa fa-list"></i></span></a>

                                    <a href="@Url.Action("Delete",new { id = item.Id })" class="btn btn-danger" title="Apagar viajem" data-toggle="tooltip"><span><i class=" fa fa-trash"></i></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="panel-footer"></div>
            </div>
        </div>
    </div>
</div>

