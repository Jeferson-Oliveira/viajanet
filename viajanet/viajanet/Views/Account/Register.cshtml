@model viajanet.Models.RegisterViewModel
@{
    ViewBag.Title = "Cadastro";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title>Cadastro</title>
    @Styles.Render("~/Content/css")
    <!--Render jquery-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <!--Render plugins-->
    <!--Render moder-->
    @Scripts.Render("~/bundles/modernizr")
    <!--Render boot-->
    @Scripts.Render("~/bundles/bootstrap")
    <!--Render aplication-->
    @Scripts.Render("~/Content/assets/js")

</head>
<body style="padding-top:80px;">
    <div class="container" id="login-form">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading text-center login-logo">
                        <h4 class="logo text-center center-block">Cadas<span>tre-se</span></h4>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-xs-12">
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label sr-only" })
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-envelope"></i>
                                        </span>
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                    </div>
                                </div>
                            </div>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label sr-only" })
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-key"></i>
                                            </span>
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Senha" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label sr-only" })
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-key"></i>
                                            </span>
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirme a senha" })
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <div class="form-group">
                                        <div class="col-xs-12">
                                            <div class="clearfix">
                                                @Html.ActionLink("Já possui uma conta? Entre", "Login", "Account", new { @class = "btn btn-primary pull-left" })
                                                <button class="btn btn-success pull-right">
                                                    <i class="fa fa-sign-in"></i> Cadastrar
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>


